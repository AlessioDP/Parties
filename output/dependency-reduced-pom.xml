<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parties</artifactId>
    <groupId>com.alessiodp.parties</groupId>
    <version>3.2.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>output</artifactId>
  <build>
    <defaultGoal>package install</defaultGoal>
    <directory>${basedir}/target</directory>
    <finalName>${project.parent.name}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>com.alessiodp.parties:*</include>
            </includes>
          </artifactSet>
          <relocations>
            <relocation>
              <pattern>com.alessiodp.core</pattern>
              <shadedPattern>com.alessiodp.parties.core</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.h2</pattern>
              <shadedPattern>com.alessiodp.parties.libs.h2</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.zaxxer.hikari</pattern>
              <shadedPattern>com.alessiodp.parties.libs.hikari</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.jdbi</pattern>
              <shadedPattern>com.alessiodp.parties.libs.jdbi</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.mariadb</pattern>
              <shadedPattern>com.alessiodp.parties.libs.mariadb</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.mysql</pattern>
              <shadedPattern>com.alessiodp.parties.libs.mysql</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.postgresql</pattern>
              <shadedPattern>com.alessiodp.parties.libs.postgresql</shadedPattern>
            </relocation>
            <relocation>
              <pattern>net.objecthunter.exp4j</pattern>
              <shadedPattern>com.alessiodp.parties.libs.exp4j</shadedPattern>
            </relocation>
          </relocations>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/MANIFEST.MF</exclude>
                <exclude>META-INF/**</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.22</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.deploy.skip>true</maven.deploy.skip>
  </properties>
</project>
